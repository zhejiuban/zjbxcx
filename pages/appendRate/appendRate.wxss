/* pages/evaluate/evaluate.wxss */

.content{
  padding-bottom: 10rpx;
}

.list {
  display: flex;
  flex-grow: row no-wrap;
  padding: 10rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
  
}

.list-bewrite {
  display: flex;
  flex-grow: row no-wrap;
  padding: 25rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}

.bewrite {
  word-wrap:break-word;
  word-break:break-all;
  height: auto;
  width: 500rpx;
}

.list_label {
  line-height: 70rpx;
}

.list_value {
  line-height: 70rpx;
}

.list image {
  width: 100rpx;
  height: 100rpx;
  padding: 0 10rpx;
}

.order_title{
  text-align: center;
  padding: 20rpx;
  color: #666;
  font-size: 40rpx;
  font-weight: bolder;
}

.repair_log{
  float: right;
  margin-right: 10rpx;
  width: 200rpx;
  height: 60rpx;
  font-size: 24rpx;
  background-color: #09BB07;
  color: #fff;
}

.section {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

 .section_title {
  font-size: 28rpx;
  /* width: 25%; */
  line-height: 100rpx;
} 

.stars {
  position: relative;
  /* width: 100%; */
  height: 100rpx;
}

.star-image {
  position: absolute;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  src: "../../images/normal.png";
}

.item {
  position: absolute;
  top: 50rpx;
  width: 75rpx;
  height: 150rpx;
}


.title {
  width: 100%;
  text-align: center;
  padding: 5rpx 0;
  color: #999;
  font-size: 28rpx;
}

.section_remarks {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 0rpx;
  font-size: 14px;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.remarks {
  border: 1rpx solid #eee;
  padding: 15rpx; 
  border-radius: 10rpx;
  height: 140rpx;
  font-size: 32rpx;
  width: 90%;
  margin: 0 5%;
}

.btn-area {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.btn-area>button {
  color: #fff;
  background-color: #4898fa;
  height: 100rpx;
  line-height: 100rpx;
  border: none;
  border-radius: 0;
}

button::after{
  border: none;
}

.stars {
  position: relative;
  /* width: 60%; */
  margin-left:10rpx;
  /* margin: 0 20%; */
  height: 75rpx;
}

.star-image {
  position: absolute;
  right: 0; 
  width: 75rpx;
  height: 75rpx;
  src: "../../images/normal.png";
}

.item {
  position: absolute;
  top: 0rpx;
  width: 75rpx;
  height: 75rpx;
}
