<!--pages/details/details.wxml-->
<view>
  <view class='order_title' >工单详情</view>
  <view class='list'>
    <text class='list_label'>报修资产：</text>
    <text class='list_value'>计算机</text>
  </view>
  <view class='list'>
    <text class='list_label'>所在场地：</text>
    <text class='list_value'>芜湖职业技术学院/南校区/创业园</text>
  </view>
  <view class='list-bewrite'>
    <text>故障描述：</text>
    <textarea class='bewrite' placeholder='例如：空调制热有问题'></textarea>
  </view>
  <view class='list'>
    <text class='list_label'>图片拍摄：</text>
    <view wx:for="{{imgs}}">
      <image src='{{item}}' bindtap='imgShow' mode='aspectFill'></image>
    </view>
  </view>

  <view class='order_title' >评价详情</view>
  <view class='section'>
      <view class='section_title'>满意度:</view>
      <view class='stars'>
        <block wx:for="{{stars}}">
          <image class="star-image" mode='aspectFit' style="left: {{item*100}}rpx" src="{{key > item ?(key-item == 0.5?halfSrc:selectedSrc) : normalSrc}}">
            <view class="item" style="left:0rpx" data-key="{{item+0.5}}" bindtap="selectLeft"></view>
            <view class="item" style="left:75rpx" data-key="{{item+1}}" bindtap="selectRight"></view>
          </image>
        </block>
      </view>
    </view>
    <view class='section_remarks'>
      <view class='section_title'>评论内容：</view>
      <textarea class='remraks' name="appraisal" disabled >维修很及时，谢谢维修师傅</textarea>
    </view>
</view>