/* pages/details/details.wxss */

.list {
  display: flex;
  flex-grow: row no-wrap;
  padding: 10rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
  
}

.list-bewrite {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}

.list-bewrite .bewrite {
  border: 1px solid #eee;
  padding: 10rpx;
  border-radius: 10rpx;
  height: 200rpx;
  width: 500rpx;
}

.list_label {
  line-height: 70rpx;
}

.list_value {
  line-height: 70rpx;
}

.list image {
  width: 100rpx;
  height: 70rpx;
  padding: 0 10rpx;
}

.order_title{
  text-align: center;
  padding: 20rpx;
  color: #666;
  font-size: 40rpx;
  font-weight: bolder;
}



.section {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.section_remarks {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 40rpx;
  height: 160rpx;
  font-size: 28rpx;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.section_title {
  font-size: 28rpx;
  width: 25%;
  line-height: 100rpx;
}

.remraks {
  border: 1rpx solid #eee;
  padding: 10rpx;
  border-radius: 10rpx;
  height: 140rpx;
  width: 70%;
}

.btn-area {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.btn-area>button {
  color: #fff;
  background-color: #4898fa;
  height: 100rpx;
  line-height: 100rpx;
  border: none;
  border-radius: 0;
}

.stars {
  position: relative;
  width: 100%;
  height: 100rpx;
}

.star-image {
  position: absolute;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  src: "../../images/normal.png";
}

.item {
  position: absolute;
  top: 50rpx;
  width: 75rpx;
  height: 150rpx;
}
