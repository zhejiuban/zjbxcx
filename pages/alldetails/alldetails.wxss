/* pages/details/details.wxss */

.content{
  padding-bottom: 100rpx;
}

.list {
  display: flex;
  flex-grow: row no-wrap;
  padding: 10rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
  
}

.list-bewrite {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}

.bewrite {
  word-wrap:break-word;
  word-break:break-all;
  height: auto;
  width: 500rpx;
}

.list_label {
  line-height: 70rpx;
}

.list_value {
  line-height: 70rpx;
}

.list image {
  width: 100rpx;
  height: 100rpx;
  padding: 0 10rpx;
}

.order_title{
  text-align: center;
  padding: 20rpx;
  color: #666;
  font-size: 40rpx;
  font-weight: bolder;
}

.repair_log{
  float: right;
  margin-right: 10rpx;
  width: 200rpx;
  height: 60rpx;
  font-size: 24rpx;
  background-color: #09BB07;
  color: #fff;
}

.section {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

