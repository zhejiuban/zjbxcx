 .section_title {
  font-size: 28rpx;
  width: 25%;
  line-height: 100rpx;
} 

.stars {
  position: relative;
  width: 100%;
  height: 100rpx;
}

.star-image {
  position: absolute;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  src: "../../images/normal.png";
}

.item {
  position: absolute;
  top: 50rpx;
  width: 75rpx;
  height: 150rpx;
}

.btn-area{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.btn-area>button {
  color: #fff;
  background-color: #4898fa;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
}
button::after{
  border: none;
}

/*底部tabBar  */
.tabBar{
  width:100%;
  position: fixed;
  white-space: nowrap;
  justify-content: space-between;
  bottom:0;
  height:60rpx;
  line-height: 60rpx;
  padding: 20rpx 0;
  background-color: #4898fa;
  color: #fff;
}
.tabBar_litem{
  width:50%;
  height: 60rpx;
  overflow: auto;
  font-size: 32rpx;
  display: inline-block; 
  text-align: center;
}