.tab-h {
  height: 90rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 90rpx;
  background: #f7f7f7;
  font-size: 32rpx;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  height: 82rpx;
  width: 25%;
  text-align: center;
  display: inline-block;
}

.tab-item.active {
  color: #4675f9;
  border-bottom: 8rpx solid #4675f9;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 2rpx solid #f2f2f2;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  position: relative;
  text-align: center;
}

.avatar .img {
  width: 130rpx;
  height: 130rpx;
}

.expertInfo {
  position: relative;
  width: 80%;
  font-size: 24rpx;
  color: #b0b0b0;
  line-height: 1.5em;
  padding-left: 20rpx;
}

.expertInfo .name {
  font-size: 34rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.expertInfo .wait_tag {
  width: 75%;
}

