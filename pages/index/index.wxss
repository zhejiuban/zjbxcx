.tabBar{
  width:100%;
  position:absolute;
  bottom:0;
  height:80rpx;
  line-height: 80rpx;
  padding: 20rpx 0;
  background-color: #4898fa;
  color: #fff;
}
.tabBar_litem{
  width:33.3%;
