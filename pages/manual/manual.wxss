
.page {
  position: relative;
}

.section {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.section1 {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.section_title{
  width: 25%;
  text-align: center;
}

.textarea_view {
  border-bottom: 1rpx solid #eee;
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 20rpx;
  font-size: 14px;
  position: relative;
  color: #333;
}

.scanBtn{
  position: absolute;
  right: 20rpx; 
  width: 10%;
}

.reset{
  position: absolute;
  right: 10rpx;
  top:20rpx;
  font-size: 24rpx;
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #09BB07;
  border: 1rpx solid #ccc;
}

.textarea_view textarea {
  border: 1px solid #eee;
  border-radius: 10rpx;
  width: 600rpx;
  height: 140rpx;
  padding: 10rpx;
}

.textarea_title{
  /* border: 1px solid red; */
  width: 25%;
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
}

.section input {
   padding: 15rpx 10rpx; 
   width: 65%;
}
.section .verify-input{
  width: auto;
}

.section .mult {
  width: 90%;
}
.section1 .uploader_imgs{
  width:100rpx;
  height:100rpx;
  padding: 0 10rpx;  
}

.section .picker {
  width: 100%;
}

.uploaderBtn image {
  width: 100rpx;
  height: 100rpx;
}

button::after{
  border: none;
}

.prompt{
  margin-top: 15rpx; 
  overflow:auto;
  height:70rpx;
  padding: 10rpx;
  line-height: 35rpx;
  color: #999;
}

.list {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 20rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}

.list_label {
  line-height: 70rpx;
}

.list_value {
  line-height: 70rpx;
}

.list_time{
  margin-bottom: 100rpx;
}

/*底部tabBar  */
.tabBar{
  z-index: 1000;
  width:100%;
  position: fixed;
  white-space: nowrap;
  justify-content: space-between;
  bottom:0;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #4898fa;
  color: #fff;
}
.tabBar_litem{
  width:49%;
  height: 100rpx;
  overflow: auto;
  font-size: 32rpx;
  display: inline-block; 
  text-align: center;
  color: #fff;
  background-color: #4898fa;
  line-height: 100rpx;
}
.verify-button{
  font-size: 14px;
  /* line-height:2.2; */
  padding-left:10px;
  padding-right: 10px; 
  background-color:#4898fa;
  color:#fff;
}
.hide{
  display:none;
}