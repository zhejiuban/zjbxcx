<!--pages/groupManual/groupManual.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">

  <view class="section">
    <view class="section_title">设备组名：</view>
    <text>{{equipment_name}}</text>
  </view>

  <view class="section">
    <view class="section_title">所在场地：</view>
    <text>{{area_name}}</text>
  </view>

  <view class="section">
    <view class="section_title">所属单位：</view>
     <text>{{org_name}}</text> 
  </view>

  <view class="section">
    <view class="section_title">选择资产：</view>
    <picker bindchange="bindAssetChange" value="{{index}}" range="{{asset_list}}" range-key="{{'asset_name'}}"> 
      <view class="picker">
        {{asset_list[index].asset_name}}
      </view>
    </picker> 
  </view> 

  <view class="textarea_view">
    <textarea name="remarks" placeholder='问题描述' ></textarea>
  </view>

  <view class='section1' >
    <block wx:for="{{imgs}}" wx:key="property">
      <image src="{{item}}" class='uploader_imgs' bindtap='imgShow' data-src="{{item}}" data-img-id="{{img_ids[index]}}" bindlongtap="longTap" bindtouchstart="touchStart" bindtouchend="touchEnd" data-index="{{index}}"></image>
    </block>
    <view class='uploaderBtn' bindtap='selectImg'>
      <image wx:if="{{imgs.length<3}}" src='{{uploaderImg}}'></image>
    </view>
    <text class='prompt'>上传图片\n最多三张,长按删除</text>
  </view>

  <view class="section">
    <input type="text" name="user_phone"  placeholder="联系方式(选填)" />
  </view>

  <view class='tabBar'>
    <view class='tabBar_litem' catchtap='to_index' >
        取消
    </view>
    <button class='tabBar_litem submitBtn' formType="submit">
        提交
    </button>
  </view>

</form>