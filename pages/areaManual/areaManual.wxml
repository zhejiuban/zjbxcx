<form bindsubmit="formSubmit" bindreset="formReset">

  <view class="section">
    <view class="section_title">选择场地：</view>
    <text wx:if="{{area_names}}" >{{area_names}}</text>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{area}}" range-key="{{'name'}}">
      <view class="picker">
        {{area[index].name}}
      </view>
    </picker>

    <view class='reset' catchtap='resetArea' >重置</view>

  </view>

  <view class="section">
    <view class="section_title">选择资产：</view>
    <picker bindchange="bindAssetChange" value="{{asset_index}}" range="{{asset_list}}" range-key="{{'asset_name'}}">
      <view class="picker">
        {{asset_list[asset_index].asset_name}}
      </view>
    </picker>
  </view>

  <view class="textarea_view">
    <textarea name="remarks" placeholder='问题描述' ></textarea>
  </view>

    <view class='section' style='border-bottom:none;'>
    <block wx:for="{{imgs}}">
      <image src='{{item}}' class='uploader_imgs' bindtap='imgShow' data-src="{{item}}" data-img-id="{{img_ids[index]}}" bindlongtap="longTap" bindtouchstart="touchStart" bindtouchend="touchEnd" data-index="{{index}}"></image>
    </block>
    <view class='uploaderBtn' bindtap='selectImg'>
      <image wx:if="{{imgs.length<3}}" src='{{uploaderImg}}'></image>
    </view>
    <text class='prompt'>拍摄照片帮助我们\n更快解决问题(最多三张,长按删除)</text>
  </view>

  <view class="btn-area">
     <button class='submitBtn' formType="submit">提交</button>
  </view>
</form>